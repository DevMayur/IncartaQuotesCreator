<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/bold</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/textColor</item>
    </style>

    <!-- Customize your theme here. -->
    <style name="Board">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:textSize">11dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#666666</item>
        <item name="android:background">@null</item>
    </style>

    <style name="DrawerItemStyle">
        <item name="android:gravity">start|center_horizontal|clip_horizontal</item>
        <item name="android:orientation">@null</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:paddingLeft">38dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingRight">38dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="AppTheme.Splash" parent="@android:style/Theme.NoTitleBar">
        <item name="fontFamily">@font/bold</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:colorBackground">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBarNew" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="fontFamily">@font/bold</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="SwitchCompatStyle">
        <item name="colorControlActivated">@color/lightBlack</item>
        <item name="trackTint">@color/grey</item>
    </style>

    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    //for About Dialog
    <style parent="android:Theme.Holo.Dialog.NoActionBar" name="DialogCustomTheme">
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

</resources>
